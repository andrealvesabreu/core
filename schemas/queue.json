{
    "type": "object",
    "required": [
        "type",
        "config"
    ],
    "properties": {
        "type": {
            "type": "string",
            "const": "queue"
        },
        "config": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "anyOf": [
                    {
                        "if": {
                            "properties": {
                                "driver": {
                                    "const": "redis"
                                }
                            },
                            "required": [
                                "driver"
                            ]
                        },
                        "then": {
                            "$ref": "#/definitions/redis"
                        },
                        "else": {
                            "$ref": "#/definitions/rabbit"
                        }
                    }
                ]
            }
        }
    },
    "definitions": {
        "rabbit": {
            "type": "object",
            "required": [
                "name",
                "driver",
                "host",
                "port",
                "exchange",
                "queue_type"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 60,
                    "pattern": "^[^\\s]*$"
                },
                "driver": {
                    "const": "rabbit"
                },
                "host": {
                    "type": "string",
                    "format": "hostname"
                },
                "port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535
                },
                "user": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100
                },
                "pass": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100
                },
                "vhost": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100
                },
                "read_timeout": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 60,
                    "default": 3
                },
                "write_timeout": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 60,
                    "default": 3
                },
                "connection_timeout": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 60,
                    "default": 3
                },
                "heartbeat": {
                    "type": "integer",
                    "maximum": 60,
                    "default": 0
                },
                "persisted": {
                    "type": "boolean"
                },
                "lazy": {
                    "type": "boolean",
                    "default": true
                },
                "qos_global": {
                    "type": "boolean",
                    "default": false
                },
                "qos_prefetch_size": {
                    "type": "integer",
                    "maximum": 30,
                    "default": 0
                },
                "qos_prefetch_count": {
                    "type": "integer",
                    "maximum": 30,
                    "default": 0
                },
                "exchange": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100
                },
                "queue_type": {
                    "type": "string",
                    "enum": [
                        "direct",
                        "fanout",
                        "headers",
                        "topic"
                    ]
                },
                "ssl_on": {
                    "type": "boolean",
                    "default": false
                },
                "ssl_verify": {
                    "type": "boolean",
                    "default": false
                },
                "ssl_cacert": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "ssl_cert": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "ssl_key": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "ssl_passphrase": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "consumer": {
                    "oneOf": [
                        {
                            "type": "string",
                            "minLength": 3
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "minLength": 3
                            },
                            "minItems": 1,
                            "maxItems": 2
                        }
                    ]
                }
            }
        },
        "redis": {
            "type": "object",
            "required": [
                "name",
                "driver",
                "host",
                "port"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 60,
                    "pattern": "^[^\\s]*$"
                },
                "driver": {
                    "const": "redis"
                },
                "host": {
                    "type": "string",
                    "format": "hostname"
                },
                "port": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 65535
                },
                "pass": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100
                },
                "database": {
                    "type": "integer",
                    "minLength": 1,
                    "maxLength": 128
                },
                "persisted": {
                    "type": "boolean"
                },
                "read_timeout": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 60,
                    "default": 3
                },
                "connection_timeout": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 60,
                    "default": 3
                },
                "consumer": {
                    "oneOf": [
                        {
                            "type": "string",
                            "minLength": 3
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "minLength": 1
                            },
                            "minItems": 1,
                            "maxItems": 2
                        }
                    ]
                }
            }
        }
    }
}